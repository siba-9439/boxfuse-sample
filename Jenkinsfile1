pipeline {
      agent any
      
      stages{
            stage("GIT checkout"){
            steps{
                 git 'https://github.com/siba-9439/boxfuse-sample-java-war-hello.git'
              }
            }
            stage("build"){
                  steps{
                       sh "mvn clean package"
                       sh "mv target/*.war target/boxfuse-sample-java-war-hello.war"
                      }
                       
            }
             stage("depoly"){
                  steps{
                     
                       
                     sshagent(['6a11d1e3-59a6-46ce-81bc-594680620fab']) {
                       
                       sh """
                            scp -o StrictHostKeyChecking=no  target/boxfuse-sample-java-war-hello.war ec2-user@35.154.88.83:/home/ec2-user/apache-tomcat-9.0.82/webapps/
                            
                            ssh ec2-user@35.154.88.83/home/ec2-user/apache-tomcat-9.0.82/bin/shutdown.sh
                            ssh ec2-user@35.154.88.83/home/ec2-user/apache-tomcat-9.0.82/bin/startup.sh
                            
                          """
    
}
                      
                       }
            }
       }
  }     
